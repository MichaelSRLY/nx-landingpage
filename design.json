{
  "name": "Nexora Landing Page",
  "description": "Warm paper aesthetic design system with Escher-inspired elements",
  "theme": {
    "light": {
      "colors": {
        "background": {
          "primary": "hsl(40, 30%, 97%)",
          "secondary": "hsl(40, 25%, 95%)",
          "tertiary": "hsl(40, 20%, 93%)",
          "elevated": "hsl(0, 0%, 100%)"
        },
        "foreground": {
          "primary": "hsl(30, 15%, 15%)",
          "secondary": "hsl(30, 15%, 35%)",
          "tertiary": "hsl(30, 15%, 55%)",
          "muted": "hsl(30, 10%, 65%)"
        },
        "border": {
          "default": "hsl(35, 15%, 85%)",
          "light": "hsl(35, 15%, 90%)",
          "accent": "hsl(35, 20%, 75%)"
        },
        "accent": {
          "primary": "hsl(35, 20%, 88%)",
          "secondary": "hsl(35, 20%, 90%)",
          "hover": "hsl(35, 25%, 85%)",
          "active": "hsl(35, 25%, 80%)"
        }
      }
    },
    "dark": {
      "colors": {
        "background": {
          "primary": "hsl(30, 5%, 10.5%)",
          "secondary": "hsl(30, 5%, 12%)",
          "tertiary": "hsl(30, 5%, 14%)",
          "elevated": "hsl(30, 5%, 16%)"
        },
        "foreground": {
          "primary": "hsl(40, 20%, 92%)",
          "secondary": "hsl(40, 15%, 75%)",
          "tertiary": "hsl(40, 10%, 60%)",
          "muted": "hsl(40, 8%, 45%)"
        },
        "border": {
          "default": "hsl(30, 5%, 20%)",
          "light": "hsl(30, 5%, 18%)",
          "accent": "hsl(30, 5%, 25%)"
        },
        "accent": {
          "primary": "hsl(35, 15%, 28%)",
          "secondary": "hsl(35, 15%, 32%)",
          "hover": "hsl(35, 18%, 35%)",
          "active": "hsl(35, 18%, 40%)"
        }
      }
    },
    "status": {
      "success": "hsl(120, 25%, 65%)",
      "error": "hsl(0, 60%, 60%)",
      "warning": "hsl(40, 80%, 60%)",
      "info": "hsl(210, 25%, 60%)"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Geist Sans", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"],
      "mono": ["Geist Mono", "Monaco", "Courier New", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    },
    "lineHeight": {
      "none": "1",
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    }
  },
  "spacing": {
    "0": "0",
    "px": "1px",
    "0.5": "0.125rem",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem",
    "32": "8rem"
  },
  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  "boxShadow": {
    "sm": "0 1px 3px 0 hsl(30, 15%, 15%, 0.05), 0 1px 2px 0 hsl(30, 15%, 15%, 0.03)",
    "md": "0 4px 6px -1px hsl(30, 15%, 15%, 0.08), 0 2px 4px -1px hsl(30, 15%, 15%, 0.04)",
    "lg": "0 10px 15px -3px hsl(30, 15%, 15%, 0.1), 0 4px 6px -2px hsl(30, 15%, 15%, 0.05)",
    "xl": "0 20px 25px -5px hsl(30, 15%, 15%, 0.12), 0 10px 10px -5px hsl(30, 15%, 15%, 0.04)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "container": {
    "center": true,
    "padding": {
      "DEFAULT": "1rem",
      "sm": "2rem",
      "lg": "4rem",
      "xl": "5rem",
      "2xl": "6rem"
    },
    "screens": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  "animation": {
    "fadeIn": {
      "keyframes": {
        "0%": { "opacity": "0" },
        "100%": { "opacity": "1" }
      },
      "duration": "0.5s",
      "timingFunction": "ease-in-out"
    },
    "slideUp": {
      "keyframes": {
        "0%": { "opacity": "0", "transform": "translateY(20px)" },
        "100%": { "opacity": "1", "transform": "translateY(0)" }
      },
      "duration": "0.6s",
      "timingFunction": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "slideDown": {
      "keyframes": {
        "0%": { "opacity": "0", "transform": "translateY(-20px)" },
        "100%": { "opacity": "1", "transform": "translateY(0)" }
      },
      "duration": "0.6s",
      "timingFunction": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "escher": {
    "patterns": {
      "tessellation": {
        "type": "repeating-linear-gradient",
        "angle": "45deg",
        "stops": [
          "transparent 0px",
          "transparent 35px",
          "hsl(35, 20%, 90%) 35px",
          "hsl(35, 20%, 90%) 70px"
        ]
      },
      "isometric": {
        "type": "multiple-gradients",
        "gradients": [
          {
            "angle": "30deg",
            "stops": [
              "hsl(35, 15%, 90%) 12%",
              "transparent 12.5%",
              "transparent 87%",
              "hsl(35, 15%, 90%) 87.5%"
            ]
          },
          {
            "angle": "150deg",
            "stops": [
              "hsl(35, 15%, 90%) 12%",
              "transparent 12.5%",
              "transparent 87%",
              "hsl(35, 15%, 90%) 87.5%"
            ]
          }
        ],
        "backgroundSize": "80px 140px"
      }
    }
  }
}
